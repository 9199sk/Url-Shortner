<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <%-include('./partials/urlHomeLogin.ejs')  %>
   
</head>
<body>
    <div class="container">
        <h1>Shorten Your URL</h1>
        <p>Paste your long URL below to get started:</p>
        <form id="url-form">
            <input type="text" id="url-input" placeholder="Enter your URL here..." required>
            <br>
            <button type="submit">Shorten URL</button>
        </form>
        <footer>
            <p>&copy; 2025 URL Shortener. All rights reserved.</p>
        </footer>
    </div>

    <script>
        const form = document.getElementById('url-form');

        form.addEventListener('submit', (e) => {
            e.preventDefault();

            const urlInput = document.getElementById('url-input').value;

            if (urlInput.trim() !== "" && urlInput.startsWith("http")) {
                window.location.href = "/login"; // Redirect to login page
            } else {
                alert("Please enter a valid URL.");
            }
        });
    </script>
</body>
</html>
